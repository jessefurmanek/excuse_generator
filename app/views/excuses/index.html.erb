<div class="excuses_main">
    <div class="container">
            <h1>Excuses</h1>

        <p>See all the realitistic and non-realistic excuses you can use</p>
        <div class="border"></div>
        <div class="button_position">
            <ul class="nav nav-pills">
                <li class="nav-all active"><a href="#">All</a>
                </li>
                <li class="nav-consumer"><a href="#">Realistic</a>
                </li>
                <li class="nav-consumer"><a href="#">Non Realistic</a>
                </li>
            </ul>
        </div>
        <div class="col-md-3">
             <h1>Your excuse is:</h1>

            <% @excuses.each do |excuse| %>
                <p>
                    <%= excuse.name %>
                </p>
                <% end %>
        </div>
        <div class="col-md-3">
             <h1>Your image file:</h1>

            <% @excuses.each do |excuse| %>
                <%=image_tag excuse.image, id: "excuse_image" %>
                    <% end %>
        </div>
        <!-- Insert our ruby image tag here -->
        <div class="col-md-3">
             <h2>Say this:</h2>

            <% @excuses.each do |excuse| %>
                <p>
                    <%=excuse.template %>
                </p>
                <% end %>
        </div>
        <!-- Insert ruby tag for DB here -->
        <div class="col-md-3">
             <h2>Alibi's soundbyte:</h2>

            <% @excuses.each do |excuse| %>
                <%=audio_tag excuse.sound_fx, controls: true, loop: true %>
                    <% end %>
        </div>
    </div>
    <!-- Insert button to play and an option to loop -->


